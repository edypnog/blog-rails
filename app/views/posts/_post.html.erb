<div class="card bg-light mb-3">
  <div class="card-body">
    <h5> <%= link_to post.title, post, class: "card-title nav-link" %> </h5>
    <div class="text-muted">
      <em>Por <%= post.author %> (<%= l post.created_at, format: :short %>) </em>
    </div>
    <p class="card-body">
      <%= post.body.truncate(200)%>
    </p>
    <p class="text-muted">
      <%= pluralize(post.comments.count, 'ComentÃ¡rio') %>
    </p>
    <%= link_to "Ler Artigo", post, class: "btn btn-secondary" %>
